#include <stdio.h>
int main()
{
    int row,colu,X;

    scanf("%d",&X);
    for (row = 1; row<= X; row++) {

        for (colu=1; colu<=X-row;colu++) {
            printf(" ");
        }
        for (colu=1; colu<=(2 * row - 1);colu++) {
            printf("*");
        }
        printf("\n");
    }
    for (row=X-1; row>=1; row--) {

        for (colu=1;colu<=X-row;colu++) {
            printf(" ");
        }
        for (colu=1;colu<=(2*row-1);colu++)
            {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}

